{% extends 'base.html.twig' %}
{% set position = 1 %} {# menu anchor variable #}
{% block title %}Admin Xtra Copy: Recherche abonné {% endblock %}
{% block body %}
<h1>Administation de Xtra Copy Tournai : Recherche abonné</h1>
<div class="cadrePrincipal">
    <div class="list">
        {{ form_start(form) }}
        <div class="rechercheAbo">
            <div class="form-groupe">
                {{ form_row(form.nom) }}
            </div>
            <div class="form-groupe">
                {{ form_row(form.prenom) }}
            </div>
            <div class="button">
                <button type="submit">Rechercher</button>
            </div>
            {{ form_end(form) }}
            {% if pagination|length > 0 %}
            <h2>Résultats de la recherche</h2>
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for abonne in pagination %}
                    <tr>
                        <td>{{abonne.name}}</td>
                        <td>{{abonne.surname}}</td>
                        <td class="link"><a href="{{path('app_caisse_abo_index',{'id': abonne.id})}}" class="modif">Modifier</a>
                            <a href="{{path('app_caisse_abo_index',{'id': abonne.id})}}" class="delete">Supprimer</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {{ knp_pagination_render(pagination) }}
            {% else %}
            <div class="error">
                <p>Aucun résultat trouvé.</p>
            </div>
            {% endif %}
        </div>    
            <a href="{{ path('app_caisse_abo_index') }}" class="retour">Retour</a>
    </div>



</div>
{% include "partials/_menuCaisse.html.twig" %}
{% endblock %}