{% extends 'base.html.twig' %}
{% set position = 3 %} {# menu anchor variable #}
{% block title %}Admin Xtra Copy: Prix des photocopies{% endblock %}
{% block body %}
<h1>Administation de Xtra Copy Tournai : Prix des photocopies</h1>
<div class="cadrePrincipal">
    <h2>Prix des photocopies</h2>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success mt-2">
        {{ message }}
    </div>
    {% endfor %}
    <div class="list">
        <div class="double">
            <div class="tableau">
            <h3>Copies couleurs</h3>
            <a href="{{ path('pricecoloradd')}}" class='ajoute'>Ajouter</a>
                <table>
                    
                    <thead>
                        <tr>
                            <th>Début</th>
                            <th>Fin</th>
                            <th>Prix</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for color in colors %}
                        <tr>
                            <td>{{color.Begin}}</td>
                            <td>{{color.End}}</td>
                            <td>{{ color.Price | round(3) }} €</td>
                            <td class="link"><a href="{{path('pricecoloredit',{'id': color.id})}}" class="modif">Modifier</a>
                                <a href="{{path('pricecolordelete',{'id': color.id})}}" class="delete">Supprimer</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="tableau">
            <h3>Copies N/B </h3>
            <a href="{{ path('pricenbadd')}}" class='ajoute'>Ajouter</a>
                <table>
                    
                    <thead>
                        <tr>
                            <th>Début</th>
                            <th>Fin</th>
                            <th>Prix</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for nb in nbs %}
                        <tr>
                            <td>{{nb.Begin}}</td>
                            <td>{{nb.End}}</td>
                            <td>{{ nb.Price | round(3) }} €</td>
                            <td class="link"><a href="{{path('pricenbedit',{'id': nb.id})}}" class="modif">Modifier</a>
                                <a href="{{path('pricenbdelete',{'id': nb.id})}}" class="delete">Supprimer</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>

        </div>
    </div>
    <a href="{{ path('indexParametre')}}" class="retour">Retour</a>
</div>
{% include "partials/_menuAdmin.html.twig" %}
{% endblock %}