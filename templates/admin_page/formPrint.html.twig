{% extends 'base.html.twig' %}
{% set position = 3 %} {# menu anchor variable #}
{% block title %}
{% set title = '' %}
{% if print.id is defined %}
{% set title = 'Administation de Xtra Copy Tournai : Modification imprimante' %}
{% else %}
{% set title = 'Administation de Xtra Copy Tournai : Ajout Imprimante' %}
{% endif %}
{{ title }}
{% endblock %}
{% block body %}
{% if print.id is defined %}
<h1>Administation de Xtra Copy Tournai : Modification de l'imprimante {{ print.numero }}</h1>
{% else %}
<h1>Administation de Xtra Copy Tournai : Ajout Imprimante</h1>
{% endif %}

<div class="cadrePrincipal">
    {% if print.id is defined %}
    <h2>Modification d'une imprimante</h2>
    {% else %}
    <h2>Ajout d'une imprimante</h2>
    {% endif %}
    {{form_start(form)}}
    <div class="form-groupe">
        {{ form_label(form.Name) }}
        {{ form_widget(form.Name) }}
        {{ form_errors(form.Name) }}
    </div>
    <div class="form-groupe">
        {{ form_label(form.numero) }}
        {{ form_widget(form.numero) }}
        {{ form_errors(form.numero) }}
    </div>
    <div class="form-groupe">
        {{ form_label(form.Ip) }}
        {{ form_widget(form.Ip) }}
        {{ form_errors(form.Ip) }}
    </div>
    <div class="form-groupe">
        {{ form_label(form.mibColorA4) }}
        {{ form_widget(form.mibColorA4) }}
        {{ form_errors(form.mibColorA4) }}
    </div>
    <div class="form-groupe">
        {{ form_label(form.MibColorA42) }}
        {{ form_widget(form.MibColorA42) }}
        {{ form_errors(form.MibColorA42) }}
    </div>
    <div class="form-groupe">
        {{ form_label(form.mibColorA3) }}
        {{ form_widget(form.mibColorA3) }}
        {{ form_errors(form.mibColorA3) }}
    </div>
    <div class="form-groupe">
        {{ form_label(form.mibBlackWitheA4) }}
        {{ form_widget(form.mibBlackWitheA4) }}
        {{ form_errors(form.mibBlackWitheA4) }}
    </div>
    <div class="form-groupe">
        {{ form_label(form.MibBlackWitheA42) }}
        {{ form_widget(form.MibBlackWitheA42) }}
        {{ form_errors(form.MibBlackWitheA42) }}
    </div>
    <div class="form-groupe">
        {{ form_label(form.mibBlackWitheA3) }}
        {{ form_widget(form.mibBlackWitheA3) }}
        {{ form_errors(form.mibBlackWitheA3) }}
    </div>
    <div class="button">
        <button type="submit" class="send">Enregister</button>
    </div>
    {{form_end(form)}}
    <a href="{{ path('indexPrint')}}" class="retour">Retour</a>
</div>
{% include "partials/_menuAdmin.html.twig" %}
{% endblock %}