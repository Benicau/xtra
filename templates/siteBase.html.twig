<!DOCTYPE html>
<html>
<head>
    <!-- Meta tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="Content-Type" content="UTF-8">
    <meta name="Content-Language" content="fr">
    <link rel="icon" type="image/jpg" href="{{ asset('images/favicon-16x16.png') }}" />

    <!-- Page title -->
    <title>{% block title %}Welcome!{% endblock %}</title>

    <!-- Stylesheets -->
    {% block stylesheets %}
        {{ encore_entry_link_tags('appSite') }} <!-- Load stylesheet for appSite -->
    {% endblock %}

    <!-- JavaScripts -->
    {% block javascripts %}
        {{ encore_entry_script_tags('jsSite') }} <!-- Load JavaScript for jsSite -->
        <script src="https://code.jquery.com/jquery-3.6.1.min.js"
                integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script> <!-- Include jQuery library -->
        <script src="https://kit.fontawesome.com/e6a7279d9f.js" crossorigin="anonymous"></script> <!-- Add Font Awesome icons -->
    {% endblock %}
</head>
<body>
    <!-- Main content -->
    {% block body %}{% endblock %}
</body>
</html>
